  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width", :name => "viewport"}/
    %title= @page_title

    %meta{ property: 'og:title', content: @page_title }
    %meta{ property: 'og:site_name', content: 'Studio L2' }
    %meta{ property: 'og:locale', content: 'de_DE' }
    %meta{ property: 'og:image', content: "#{@url}/logo.jpg" }
    %meta{ property: 'og:image:secure_url', content: "#{@url}/logo.jpg" }
    -# %meta{ property: 'article:publisher', content: 'https://www.facebook.com/StudioL2' }
    %meta{ property: 'og:url', content: @url }
    %meta{ property: 'og:type', content: 'website' }
    %meta{ property: 'og:description', content: t('defaults.description') }

    = stylesheet_link_tag "page.css"
    = javascript_include_tag "page_header.js"
    / IE Fix for HTML5 Tags
    /[if lt IE 9]
  %body
    = yield
    = javascript_include_tag "page_footer.js"
