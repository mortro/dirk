- @page_title = t('index.page_title')
- @current_page = :old_building


- t('old_building').keys.each_with_index do |topic_sym, index|
  - first = index == 0 ? true : false
  - last = index+1 == t('old_building').keys.size ? true : false
  = partial :shared_topic, locals: { meta_topic: 'old_building', topic: topic_sym, first: first, last: last, next_topic: t('old_building').keys[index+1] }
