.topic.as-shared{ class: "as-#{topic}" }
  .row.shared-topic-anchor
    %a{ name: "#{topic}" }
  .row
    .small-offset-4.small-8.columns
      %h1.topic-title.shared-topic-title= t("#{meta_topic}.#{topic}.title")
  .row
    .small-12.columns.topic-description
      = t("#{meta_topic}.#{topic}.description")
      = partial :slide_show, locals: { topic: topic, images_size: t("#{meta_topic}.#{topic}.images_size").to_i }
.border
  .border-link
    %a{ href: "##{next_topic ? next_topic : 'top'}", data: { behavior: 'anchor-scroll' } }
      .border-link-triangle{ class: "#{'as-up' if last}" }
      .border-link-triangle--small{ class: "#{'as-up' if last}" }

